<!doctype html>
<html>
    <head>
        <title>courses</title>
    </head>

    <div class="row">
        <div class="col-md-12 text-center">
            <br>
            <h2 style="text-align:left">Courses
            <a href="/courses/add" class="btn btn-success float-right">Add New Course</a>
            </h2>
            <strong>{{message}}</strong>
            <hr />

            <p>
            <div class="table-responsive-sm">
            <table class="table">     
                <tr>
                    <th>Course Code</th>
                    <th>Course Description</th>
                </tr>
                    {{#each data}}
                <tr>
                    <td><a href="/course/{{courseId}}">{{courseCode}}</a></td>
                    <td><a href="/students?course={{courseId}}">{{courseDescription}}</a></td>      
                    <td><a href="/course/delete/{{courseId}}" class="btn btn-danger">remove</a></td>         
                </tr>
                    {{/each}}
            </p>

        </div>
         {{#unless courses}}
        <div class="col-md-12 text-center">
         <strong>{{message}}</strong>
        </div>
         {{/unless}}  
    </div>
</html>