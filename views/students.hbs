<!doctype html>
<html>
    <head>
        <title>students</title>
    </head>

    <div class="row">
        <div class="col-md-12 text-center">
          <br>
          <h2 style="text-align:left">Students
            <a href="/students/add" class="btn btn-success float-right">Add New Student</a>
          </h2>
            <strong>{{message}}</strong>
          <hr />
          <p>
          <div class="table-responsive-sm">
            <table class="table" id="students_table">     
              <tr>
                <th>Student Num</th>
                <th>Full Name</th>
                <th>Email</th>
                <th>Address</th>
                <th>Status</th>
                <th>Course ID</th>
              </tr> 
                  {{#each data}}
              <tr>
                <td>{{studentNum}}</td>
                <td><a href="/student/{{studentNum}}">{{firstName}} {{lastName}}</a></td>
                <td><a href="mailto:{{email}}">{{email}}</a></td>
                <td>{{addressStreet}},{{addressCity}},{{addressProvince}}</td>
                <td>{{status}}</td>
                <td><a href="/students?course={{course}}">{{course}}</a></td>
                <td><a href="/student/delete/{{studentNum}}" class="btn btn-danger">remove</a></td>
              </tr>    
                  {{/each}}  
            </table>
          </div>  
          {{#unless students}}
          <div class="col-md-12 text-center">
          <strong>{{message}}</strong>
          </div>
        {{/unless}}    
        </div>
    </div>
</html>